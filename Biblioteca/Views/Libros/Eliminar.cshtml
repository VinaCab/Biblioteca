@model Biblioteca.Models.Libro

@{
    ViewData["Title"] = "Eliminar Libro";
}

<h1>¿Estás seguro de que deseas eliminar este libro?</h1>

<div>
    <p><strong>Título:</strong> @Model.Titulo</p>
    <p><strong>Autor:</strong> @Model.Autor</p>
    <p><strong>Año de Publicación:</strong> @Model.AnioPublicacion</p>
</div>

<form asp-action="Eliminar" method="post">
    <input type="hidden" name="id" value="@Model.Id" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a href="@Url.Action("Index")" class="btn btn-secondary">Cancelar</a>
</form>
