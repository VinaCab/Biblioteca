@* @model IEnumerable<Biblioteca.Models.Libro> *@

@model IEnumerable<dynamic> 

@{
    ViewData["Title"] = "Lista de Libros";
}

<h1>Lista de Libros</h1>

<table class="table">
    <thead>
        <tr>
            <th>Título</th>
            <th>Autor</th>
            <th>Año de Publicación</th>
            <th>Estado</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var libro in Model)
        {
            <tr>
                <td>@libro.Titulo</td>
                <td>@libro.Autor</td>
                <td>@libro.AnioPublicacion</td>
                <td>@libro.EstadoDescripcion</td>
                <td>
                    <a href="@Url.Action("Editar", new { id = libro.Id })">Editar</a> |
                    <a href="@Url.Action("Eliminar", new { id = libro.Id })">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a href="@Url.Action("Crear")" class="btn btn-primary">Agregar Nuevo Libro</a>